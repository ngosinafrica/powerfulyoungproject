{{> get_involved}}
<div class="space-medium">
    <div class="container">
        <div class="row">
            <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
                <div class="section-title mb40 text-center">
                    <!-- section title start-->
                    <h1>Latest News &amp; Projects</h1>
                </div>
                <!-- /.section title start-->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{#get "posts" limit="1" as |recents|}}
                    {{#foreach recents}}
                        <div class="post-block">
                            <div class="row ">
                                <!-- post block -->
                                <div class="col-md-6">
                                    <div class="post-img">
                                        <a href="{{url}}"><img src="{{image}}" alt="" class="img-responsive"></a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="post-content">
                                        <h2><a href="{{url}}" class="title" target="_blank"> {{title}}</a></h2>
                                        <p class="meta"> <time class="meta-date" datetime="{{date format="YYYY-MM-DD"}}">{{date
                                                format="DD MMMM YYYY"}}</time>
                                            </p>
                                        <p>{{excerpt words="50"}}...</p>
                                        <a href="{{url}}" class="btn btn-default">Read More</a> </div>
                                </div>
                            </div>
                            <!-- /.post block -->
                        </div>
                    {{/foreach}}
                {{/get}}

            </div>
        </div>
    </div>
</div>
